# question number 7 + 8

largest = None
smallest = None

while True :
    num = input('Enter a number: ')
    if num == "0" :
        break
    try :
        num = int(num)
    except :
        print('Wrong input')
        continue
    if largest is None :
        largest = num
    elif largest < num :
        largest = num
    if smallest is None :
        smallest = num
    elif num < smallest :
        smallest = num

print('Maximum is', largest)
print('Minimum is', smallest)



